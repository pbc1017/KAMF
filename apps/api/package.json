{
  "name": "@kamf/api",
  "version": "1.0.0",
  "description": "NestJS backend server for kamf monorepo",
  "author": "Perry",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development dotenv -e ../../.env -- nest start --watch",
    "build": "NODE_ENV=production dotenv -e ../../.env -- nest build",
    "start": "NODE_ENV=production dotenv -e ../../.env -- node dist/main.js",
    "clean": "rm -rf dist node_modules",
    "lint": "dotenv -e ../../.env -- eslint . --ext .ts",
    "lint:fix": "dotenv -e ../../.env -- eslint . --ext .ts --fix",
    "format": "dotenv -e ../../.env -- prettier --write .",
    "format:check": "dotenv -e ../../.env -- prettier --check .",
    "test": "dotenv -e ../../.env -- jest",
    "test:watch": "dotenv -e ../../.env -- jest --watch",
    "test:cov": "dotenv -e ../../.env -- jest --coverage",
    "test:debug": "dotenv -e ../../.env -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ../../.env -- jest --config ./test/jest-e2e.json",
    "db:up": "cd ../../ && docker-compose up mysql -d",
    "db:down": "cd ../../ && docker-compose down",
    "db:restart": "cd ../../ && docker-compose restart mysql",
    "db:logs": "cd ../../ && docker-compose logs -f mysql",
    "db:reset": "cd ../../ && docker-compose down -v && docker-compose up mysql -d",
    "db:cli": "cd ../../ && docker exec -it kamf-mysql mysql -u kamf_user -pkamf_password kamf_dev",
    "db:status": "cd ../../ && docker-compose ps",
    "migration:generate": "dotenv -e ../../.env -- typeorm migration:generate -d dist/config/typeorm.config.js",
    "migration:create": "dotenv -e ../../.env -- typeorm migration:create",
    "migration:run": "dotenv -e ../../.env -- typeorm migration:run -d dist/config/typeorm.config.js",
    "migration:revert": "dotenv -e ../../.env -- typeorm migration:revert -d dist/config/typeorm.config.js",
    "migration:show": "dotenv -e ../../.env -- typeorm migration:show -d dist/config/typeorm.config.js"
  },
  "dependencies": {
    "@kamf/interface": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/typeorm": "^10.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "twilio": "^5.8.2",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/twilio": "^3.19.3",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
